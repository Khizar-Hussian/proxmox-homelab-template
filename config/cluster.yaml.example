    - "8.8.8.8"                 # Google DNS
  ad_blocking: true             # Block ads network-wide

# Security settings  
security:
  firewall: true                # Enable firewall rules
  fail2ban: true               # Block brute force attempts
  auto_updates: true           # Install security updates automatically

